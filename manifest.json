    {
      "name": "Generate AI Resume",
      "short_name": "AI Resume",
      "description": "Generate an AI-focused resume",
      "url": "/?type=ai_product",
      "icons": [
        {
          "src": "/icons/ai-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Generate Creative Resume", 
      "short_name": "Creative Resume",
      "description": "Generate a creative/voice artist resume",
      "url": "/?type=creative_voice",
      "icons": [
        {
          "src": "/icons/creative-shortcut.png",
          "sizes": "192x192", 
          "type": "image/png"
