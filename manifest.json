      "url": "/?mode=batch",
      "icons": [
        {
          "src": "/icons/batch-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": ["productivity", "business", "utilities"],
  
  "screenshots": [
    {
      "src": "/screenshots/desktop-main.png",
      "sizes": "1280x800",
      "type": "image/png",
      "platform": "wide",
      "label": "Main interface on desktop"
    },
    {
      "src": "/screenshots/mobile-generator.png", 
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Resume generator on mobile"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+resumegen",
      "url": "/?data=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/yaml": [".yaml", ".yml"]
      }
    }
  ]
}
